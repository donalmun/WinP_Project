<Page
    x:Class="FoodApp.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FoodApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="Pink">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Login Form -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" Background="#FF90A4AE" Padding="20" CornerRadius="10">
            <TextBlock Text="Login" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center" Foreground="#FF004D40"/>

            <TextBox x:Name="UsernameTextBox" PlaceholderText="Username" Margin="0,0,0,20" Background="Black" BorderBrush="#FF004D40" BorderThickness="1"/>
            <PasswordBox x:Name="PasswordBox" PlaceholderText="Password" Margin="0,0,0,20" Background="Black" BorderBrush="#FF004D40" BorderThickness="1"/>

            <Button Content="Login" Click="LoginButton_Click" Background="#FF00796B" Foreground="White" BorderBrush="Transparent" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Page>
