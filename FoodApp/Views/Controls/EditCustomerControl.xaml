<UserControl
    x:Class="FoodApp.Views.Controls.EditCustomerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="White"
    Width="350"
    Height="400">

    <StackPanel Margin="0,10,0,0">
        <TextBlock Text="Tên" Margin="0,0,0,5" />
        <TextBox PlaceholderText="Tên" Text="{Binding Full_Name, Mode=TwoWay}" Margin="0,0,0,10" />

        <TextBlock Text="Email" Margin="0,0,0,5" />
        <TextBox PlaceholderText="Email" Text="{Binding Email, Mode=TwoWay}" Margin="0,0,0,10" />

        <TextBlock Text="Số điện thoại" Margin="0,0,0,5" />
        <TextBox PlaceholderText="Số điện thoại" Text="{Binding Phone, Mode=TwoWay}" Margin="0,0,0,10" />

        <TextBlock Text="Địa chỉ" Margin="0,0,0,5" />
        <TextBox PlaceholderText="Địa chỉ" Text="{Binding Address, Mode=TwoWay}" Margin="0,0,0,10" />

        <TextBlock Text="Điểm thưởng" Margin="0,0,0,5" />
        <TextBox PlaceholderText="Điểm thưởng" Text="{Binding Loyalty_Points, Mode=TwoWay}" Margin="0,0,0,10" />
        <!-- Add more fields as necessary -->
    </StackPanel>
</UserControl>