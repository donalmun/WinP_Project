<!-- FoodApp\Service\Controls\AIChatControl.xaml -->
<UserControl
    x:Class="FoodApp.Service.Controls.AIChatControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="White"
    Width="350"
    Height="500">

	<Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="10" Background="White">
		<StackPanel>
			<!-- Header -->
			<TextBlock Text="AI Chat" FontSize="20" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>

			<!-- Chat Content -->
			<ScrollViewer x:Name="ChatScrollViewer" VerticalScrollBarVisibility="Auto" Margin="10" Height="350">
				<StackPanel x:Name="ChatMessagesPanel">
					<!-- Example chat messages -->
					<TextBlock Text="AI: Hello! How can I assist you today?" TextWrapping="Wrap" Margin="0,0,0,10"/>
				</StackPanel>
			</ScrollViewer>

			<!-- Input Area -->
			<StackPanel Orientation="Horizontal" Margin="10">
				<TextBox x:Name="ChatInputBox" PlaceholderText="Type your message..." Width="220" Height="30" KeyDown="ChatInputBox_KeyDown"/>
				<Button Content="Send" Width="60" Height="30" Margin="5,0,0,0" Click="SendMessage_Click"/>
			</StackPanel>
		</StackPanel>
	</Border>
</UserControl>
